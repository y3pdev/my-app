<h2>Manage Profiles</h2>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>English Name</th>
            <th>Thai Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% data.forEach(function(profile) { %>
            <tr>
                <td><%= profile.id %></td>
                <td><%= profile.eng_name %></td>
                <td><%= profile.thai_name %></td>
                <td><%= profile.email %></td>
                <td>
                    <button class="edit" data-id="<%= profile.id %>" data-eng_name="<%= profile.eng_name %>" data-thai_name="<%= profile.thai_name %>" data-email="<%= profile.email %>">Edit</button>
                    <button class="delete" data-id="<%= profile.id %>">Delete</button>
                </td>
            </tr>
        <% }) %>
    </tbody>
</table>

<h3>Add New Profile</h3>
<form id="addForm" action="/profile" method="POST">
    <label for="eng_name">English Name:</label>
    <input type="text" id="eng_name" name="eng_name" required>
    <label for="thai_name">Thai Name:</label>
    <input type="text" id="thai_name" name="thai_name" required>
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" required>
    <button type="submit">Add</button>
</form>